<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <p>Hello!</p>
    <h1 class='form-header-text'>
      ユーザー登録内容編集
    </h1>
  </div>

   <%# <%= render partial: "shared/error_messages", locals: { thing: @user }, model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
    <p class='info-text'>※登録内容の編集にはパスワードの再度入力が必要です。</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">*</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "登録" ,class:"register-green-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>